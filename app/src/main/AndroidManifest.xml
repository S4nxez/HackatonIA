<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:supportsRtl="true"
        android:theme="@style/Theme.NachoRestaurante"
        tools:targetApi="31"
        android:label="Nacho Examen"
        android:icon="@drawable/logofinal"
        android:roundIcon="@drawable/logofinal"
        android:name="nacho.llorente.framework.ExamenApp"
        >

        <activity
            android:name=".framework.pantallamain.MainActivity"
            android:exported="true"
            android:permission="android.permission.INTERNET">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".framework.pantalladetallada.DetailedActivity"
            android:exported="true"
            android:permission="android.permission.INTERNET">
        </activity>
    </application>

</manifest>